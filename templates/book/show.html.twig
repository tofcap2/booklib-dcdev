{% extends 'base.html.twig' %}
{% block title %}
    {{ book.title }}
{% endblock %}

{% block body %}
    <h1>{{ book.title }}</h1>

    <p>{{ book.author.fullName }}</p>

    <ul>
        {% for category in book.category %}
        <li>
            <a href="{{path("category_show", {"id": category.id})}}">
                {{ category.name }}
            </a>
        </li>
        {% endfor %}
    </ul>

{% endblock %}

